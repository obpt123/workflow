{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "JSON Schema for workflow file",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "description": "the meta info of the workflow",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "the name of the workflow",
                    "pattern": "\\w+"
                },
                "description": {
                    "type": "string",
                    "description": "the description of the workflow"
                },
                "displayformat": {
                    "type": "string",
                    "description": "the display format of the workflow"
                },
                "inputdefines": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "\\w+": {
                            "$ref": "#/definitions/inputinfo"
                        }
                    },
                    "maxProperties": 99
                }
            },
            "required": [ "name" ]
        },
        "body": {
            "$ref": "#/definitions/chaininfo"
        },
        "setup": {
            "$ref": "#/definitions/chaininfo"
        },
        "teardown": {
            "$ref": "#/definitions/chaininfo"
        }
    },
    "required": [ "meta", "body" ],
    "definitions": {
        "inputinfo": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                }
            },
            "required": [ "type" ]
        },
        "chaininfo": {
            "type": "object",
            "properties": {
                "entry": {
                    "type": "string",
                    "pattern": "\\w+",
                    "minLength": 1
                },
                "actions": {
                    "patternProperties": {
                        "\\w+": {

                        }
                    },
                    "maxProperties": 9999
                }
            },
            "required": [ "entry", "actions" ]

        }
    }

}
