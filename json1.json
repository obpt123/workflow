{
    "input": {
        "val": {
            "type": "int",
            "default": 5,
            "is-required": true,
            "description": "参数值"
        }
    },
    "name": "demo.num",
    "description": "数字乘法表",
    "entry": "loop1",
    "actions": {
        "loop1": {
            "type": "core.for",
            "input": {
                "start": 1,
                "count": "${val}",
                "entry": "loop2",
                "item-name": "i"
            },
            "output": {
                "content": "${lastvalue.Select(p=>p.line).Join(\"\n\")}"
            },
            "on-success": {
                "tasks": [
                    {"name": "sendMail"}
                ]
            }
            
        },
        "loop2": {
            "type": "core.loop",
            "input": {
                "start": 1,
                "count": "${i}",
                "entry": "noop",
                "item-name": "j"
            },
            "output": {
                "line": "${lastvalue.Select(p=>p.exp).Join(\",\")}"
            }
        },
        "noop": {
            "type": "core.loop",
            "output": {
                "exp": "${i}*${j}=${i*j}"
            }
        }
        "sendMail": {
            "type": "net.mail",
            "input": {
                "to": "obpt@sina.com",
                "title": "${val}*${val}乘法表_${DateTime.Now.ToString(\"yyyyMMdd\")}",
                "body": "${content}"
            }
        }
    }
}
